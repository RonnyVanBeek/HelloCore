@model HelloCore.ViewModels.DetailsKlantViewModel
@{
    ViewData["Title"] = "Details";
}
<h1>Details</h1>
<h4>Klant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Naam" class="control-label"></label>
                : @Model.Naam
                <span asp-validation-for="Naam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Voornaam" class="control-label"></label>
                : @Model.Voornaam
                <span asp-validation-for="Voornaam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AangemaaktDatum" class="control-label"></label>
                : @Model.AangemaaktDatum
                <span asp-validation-for="AangemaaktDatum" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to list</a>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}