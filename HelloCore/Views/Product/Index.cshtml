@model HelloCore.ViewModels.ProductlistViewModel

<form asp-controller="Product" asp-action="Search" method="get">
    <div class="form-actions no-color">
        <p>
            Zoek op Product:
            <input asp-for="ProductSearch" />
            <input type="submit" value="Zoeken" class="btn btn-primary" />
            <a asp-controller="Product" asp-action="Index">Terug naar volledige lijst</a>
        </p>
    </div>
</form>
<table>
    <thead>
        <tr>
            <th class="col-md-4">
                @Html.DisplayNameFor(model => model.Producten[0].ProductId)
            </th>
            <th class="col-md-4">
                @Html.DisplayNameFor(model => model.Producten[0].Naam)
            </th>
            <th class="col-md-4">
                @Html.DisplayNameFor(test => test.Producten[0].Prijs)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Producten)
        {
            <tr>
                <td class="col-md-4">
                    @product.ProductId
                </td>
                <td class="col-md-4">
                    @product.Naam
                </td>
                <td class="col-md-4">
                    @product.Prijs
                </td>
                <td class="col-md-4">
                    <a asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductId">Details</a>
                </td>
                <td class="col-md-4">
                    Edit
                </td>
                <td class="col-md-4">
                    Delete
                </td>
            </tr>
        }
    </tbody>
</table>